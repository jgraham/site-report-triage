{
  "manifest_version": 2,
  "name": "Site Issue Triage",
  "version": "0.1",
  "icons": {
    "48": "icons/exchange.svg",
    "96": "icons/exchange.svg"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/exchange.svg",
    "default_title": "Move To Bugzilla",
    "default_popup": "move.html",
    "show_matches": ["https://github.com/webcompat/web-bugs/issues/*"],
    "hide_matches": ["https://github.com/webcompat/web-bugs/issues"]
  },
  "permissions": ["storage", "activeTab"],
  "browser_specific_settings": {
    "gecko": {
      "id": "site-triage@hoppipolla.co.uk"
    }
  }
}
